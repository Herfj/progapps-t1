package logica.usuarios;

import javax.persistence.EntityManager;
import javax.persistence.EntityManagerFactory;
import javax.persistence.Persistence;
import java.util.Date;

import logica.entidades.Usuario;

public class AltaUsuario {

    private String nick="asdf";
    private String name="asdfdfsa";
    private String ape="asdfsdfddd";
    private String mail="sadf@asdf";
    private String nomIma=nick;
    private Date nacDate= new Date(07/04/2000);
    
    AltaUsuario() {
    }

    public static void main(String[] args) {
        EntityManagerFactory emfactory = Persistence.createEntityManagerFactory("Eclipselink_JPA_Usuario");
        EntityManager entitymanager = emfactory.createEntityManager();
        entitymanager.getTransaction().begin();

        Usuario usuarios = new Usuario();
        usuarios.setNickname(nick);
        usuarios.setNombreUsuario(name);
        usuarios.setApellido(ape);
        usuarios.setEmail(mail);
        usuarios.setFechaNac(nacDate);
        usuarios.setNombreImagen(nomIma);

        ExisteUsuario eu = new ExisteUsuario("asd");
        if (eu.existe()) {
            System.out.println("existe");
        } else {
            System.out.println("no existe");

        }

        entitymanager.persist(usuarios);
        entitymanager.getTransaction().commit();

        entitymanager.close();
        emfactory.close();
    }

    
}
